<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tricycle.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tricycle.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tricycle.android.xml.XmlListView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tricycle.android.rxjava.RxListView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tricycle.android.webview.WebActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <receiver
            android:name="com.tricycle.android.widget.WeatherWidgetProvider"
            android:label="@string/app_name">
    　　　　		<intent-filter> 
    　　　　　　		<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    　　　　		</intent-filter> 
    　　　　		<meta-data android:name="android.appwidget.provider" android:resource="@layout/widget_provider"/>
  　　 		</receiver>
    	<service android:name="com.tricycle.android.widget.WeatherWidgetService" />
    </application>

</manifest>