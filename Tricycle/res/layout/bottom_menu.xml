<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="@drawable/bottom_menu_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/menu_textview_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/b_newhome_tabbar_press"
        android:textColor="#ff0000"
        android:text="首页"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/menu_textview_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/b_newvideo_tabbar"
        android:text="视频"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/menu_textview_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/b_newcare_tabbar"
        android:text="收藏"
        android:textSize="10sp" />

</LinearLayout>