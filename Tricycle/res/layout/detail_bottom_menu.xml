<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="bottom"
    android:gravity="center_vertical"
    android:background="@drawable/bottom_menu_background"
    android:orientation="horizontal" >
	<TextView 
	    android:id="@+id/detail_bottom_comment"
	    android:layout_width="0dp"
	    android:layout_weight="4"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:background="@drawable/radius"
	    android:textSize="18sp"
	    android:text="写评论"/>
	
	<RelativeLayout 
	    android:id="@+id/detail_bottom_goto_comment_layout"
	    android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">
	    <ImageView
	        android:id="@+id/detail_bottom_goto_comment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        android:gravity="center"
	        android:src="@drawable/new_review_tabbar"/>
	    <TextView 
	        android:id="@+id/detail_bottom_goto_comment_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignEnd="@id/detail_bottom_goto_comment"
	        android:gravity="top|end"
	        android:visibility="gone"
	        android:textSize="8sp"
	        android:textColor="#ffffff"
	        android:background="@drawable/comment_count_background"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/detail_bottom_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:src="@drawable/new_love_tabbar" />
    <ImageView
        android:id="@+id/detail_bottom_disfavorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:visibility="gone"
        android:gravity="center"
        android:src="@drawable/new_love_tabbar_selected" />
    <ImageView
        android:id="@+id/detail_bottom_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:src="@drawable/new_share_tabbar_normal"/>
    
</LinearLayout>